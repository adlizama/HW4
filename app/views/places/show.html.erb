<h1><%= @place["name"] %></h1>

<% @user = User.find_by({"id" => session["user_id"]}) %>


<h2>My Entries</h2>
<div class = "row">
  <% for entry in @entries %>
    <div class = "col-md-4">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <%if entry.uploaded_image.attached?%>  
        <img src="<% url_for(entry.uploaded_image)%>" class = "img-fluid">
      <%end%>
      <p><%= entry["description"] %></p>
    </div>  
  <% end %>
</div>  


<% if @user != nil%>
<p>
  <a class = "link-offset-2" href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>
<%end%>

<p>
  <a class = "link-offset-2" href="/places">Back to All Places</a>
</p>